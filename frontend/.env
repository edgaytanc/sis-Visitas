# URL del backend (sin barra final)
VITE_API_URL=http://localhost:8000

# Usa login simulado (true) o real (false)
VITE_USE_DUMMY_AUTH=false

# RUTAS de autenticación estilo Djoser + SimpleJWT
VITE_AUTH_LOGIN_PATH=/api/auth/jwt/create/
VITE_AUTH_REFRESH_PATH=/api/auth/jwt/refresh/
VITE_AUTH_ME_PATH=/api/users/me/

# Ruta base del recurso Temas (ajústala si tu backend usa otra)
VITE_TEMAS_PATH=/api/catalog/topics/

# Visits: rutas del backend que definiste en DRF
VITE_VISITS_PATH=/api/visits/visits/
VITE_VISITS_SEARCH_PATH=/api/visits/search/
VITE_VISITS_PHOTO_UPLOAD_PATH=/api/visits/photos/upload/